<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
            
        <RelativeLayout 
            android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:padding="6dip" >
            
            <CheckBox
		        android:id="@+id/setting_delete_tasks_new_day"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true" />
	        
	        <TextView
	            android:id="@+id/text_delete_tasks_new_day"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBaseline="@+id/setting_delete_tasks_new_day"
		        android:layout_alignBottom="@+id/setting_delete_tasks_new_day"
		        android:layout_toLeftOf="@+id/setting_delete_tasks_new_day"
		        android:layout_alignParentLeft="true"
		        android:paddingLeft="4sp"
		        android:text="@string/setting_delete_tasks_new_day" />
        
        </RelativeLayout>
        
    </LinearLayout>
    

</ScrollView>
